<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_5sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_round_orange_10dp"
                android:backgroundTint="@color/gray"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_recipe"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_oval_orange"
                android:backgroundTint="@color/black"/>
            <TextView
                android:id="@+id/txt_recipe_name"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_recipe"
                app:layout_constraintTop_toTopOf="@id/img_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.1"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:text="@string/classic_greek_salad"
                android:textSize="@dimen/_14ssp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:ellipsize="end"
                android:maxLines="1"/>
            <RatingBar
                android:id="@+id/recipe_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:ratingBarStyleSmall"
                android:numStars="5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_recipe_name"
                app:layout_constraintVertical_bias="1"
                android:layout_marginStart="@dimen/_8sdp"
                android:clickable="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_recipe"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_8sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_creator_avatar"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/bg_btn_oval_white"/>
                <TextView
                    android:id="@+id/txt_creator_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="By James Milner"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/light_gray"
                    android:layout_marginStart="@dimen/_5sdp"/>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/light_gray" />
                <TextView
                    android:id="@+id/txt_recipe_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mins_15"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/light_gray"
                    android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>