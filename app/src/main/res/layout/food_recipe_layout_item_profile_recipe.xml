<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp">
        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_round_orange_10dp"
            android:backgroundTint="@color/gray"/>
        <TextView
            android:id="@+id/txt_recipe_name"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:text="@string/classic_greek_salad"
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:ellipsize="end"
            android:maxLines="2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/bg_round_orange_10dp"
            android:backgroundTint="@color/light_yellow"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp">
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_star"
                android:scaleType="centerInside"
                android:layout_marginEnd="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_recipe_name"
            app:layout_constraintVertical_bias="0.2"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_8sdp">
            <ImageView
                android:id="@+id/img_creator_avatar"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerInside"
                android:background="@drawable/bg_btn_oval_white"/>
            <TextView
                android:id="@+id/txt_creator_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="By James Milner"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/light_gray"
                android:layout_marginStart="@dimen/_5sdp"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_timer"
                app:tint="@color/light_gray" />
            <TextView
                android:id="@+id/txt_recipe_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mins_15"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/light_gray"
                android:layout_marginStart="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_mark"
                android:scaleType="centerInside"
                android:tint="@color/light_gray"
                android:background="@drawable/bg_btn_oval_white"
                android:layout_marginStart="@dimen/_5sdp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>