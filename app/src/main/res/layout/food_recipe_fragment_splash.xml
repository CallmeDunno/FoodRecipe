<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/relative_layout_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_104sdp">

        <ImageView
            android:id="@+id/image_view_chef_hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/splash" />

        <TextView
            android:id="@+id/text_view_premium_recipes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_chef_hat"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="100K+ Premium Recipes"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_get_cooking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_315sdp">

        <TextView
            android:id="@+id/text_view_get_cooking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Get Cooking"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/_45ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_find_tasty_recipe_subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@id/text_view_get_cooking_title"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:text="Simple way to find Tasty Recipe"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_start_cooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_marginTop="630dp"
        android:background="@drawable/button_background"
        android:text="Start Cooking â†’"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        app:backgroundTint="@null" />

</FrameLayout>
